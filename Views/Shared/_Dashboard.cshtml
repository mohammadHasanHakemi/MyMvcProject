<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>داشبورد مدیریتی</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="bg-gray-800 w-64 min-h-screen p-4">
            <div class="text-white text-2xl font-bold mb-8">داشبورد</div>
            <nav>
                <ul class="space-y-2">
                    <li>
                        <a  asp-action="Dashboard" asp-controller="Admin" class="text-white block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                            صفحه اصلی
                        </a>
                    </li>
                    <li>
                        <a asp-action="Albums" asp-controller="Albums" class="text-white block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                            آلبوم ها
                        </a>
                    </li>
                    <li>
                        <a asp-action="Musics" asp-controller="Musics" class="text-white block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                            موزیک ها
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Home" class="text-red-500 block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                            بازگشت
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

    @RenderBody()
    </div>
</body>
</html> 