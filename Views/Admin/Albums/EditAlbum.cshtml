@model MyMvcProject.Models.Album
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<main class="flex-1 p-8">
    <header class="bg-white shadow rounded-lg p-6 mb-8">
        <h1 class="text-2xl font-bold text-gray-800">ویرایش آلبوم</h1>
    </header>
    <div class="bg-white rounded-lg shadow p-6 max-w-xl mx-auto">
        <form asp-action="EditAlbum" asp-controller="Albums" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="mb-4">
                <label class="block text-gray-700 mb-2" for="Name">نام آلبوم</label>
                <input asp-for="Name" type="text" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 mb-2" for="posterFile">عکس کاور (اگر می‌خواهید تغییر دهید، انتخاب کنید)</label>
                <input id="posterFile" name="posterFile" type="file" accept="image/*" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                @if (!string.IsNullOrEmpty(Model.PosterPath))
                {
                    <div class="mt-2">
                        <img src="~/Upload/@Model.PosterPath" alt="کاور آلبوم" class="w-32" />
                    </div>
                }
            </div>
            <div class="flex justify-between">
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">ذخیره تغییرات</button>
                <a asp-action="Albums" asp-controller="Albums" class="bg-gray-300 text-gray-800 px-6 py-2 rounded hover:bg-gray-400 transition">انصراف</a>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="text-red-800 mt-4">@ViewBag.Error</div>
            }
        </form>
    </div>
</main>
